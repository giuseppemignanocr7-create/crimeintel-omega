generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─────────────────────────────────────────────
// USERS & AUTH
// ─────────────────────────────────────────────

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(INVESTIGATOR)
  name      String?
  isActive  Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cases     Case[]
  auditLogs AuditLog[]

  @@index([email])
  @@index([role])
}

enum Role {
  ADMIN
  SUPERVISOR
  INVESTIGATOR
  ANALYST
  VIEWER
}

// ─────────────────────────────────────────────
// CASES
// ─────────────────────────────────────────────

model Case {
  id          String     @id @default(uuid())
  caseNumber  String     @unique @default(uuid()) // Human-readable case number
  title       String
  description String?
  status      CaseStatus @default(OPEN)
  priority    Priority   @default(MEDIUM)
  locationLat Float?
  locationLng Float?
  locationName String?
  tags        String[]   @default([])
  userId      String
  deletedAt   DateTime?  // Soft delete
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user      User       @relation(fields: [userId], references: [id])
  evidence  Evidence[]
  fusion    Fusion?
  reports   Report[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([deletedAt])
}

enum CaseStatus {
  OPEN
  ACTIVE
  PENDING_REVIEW
  CLOSED
  ARCHIVED
}

enum Priority {
  CRITICAL
  HIGH
  MEDIUM
  LOW
}

// ─────────────────────────────────────────────
// EVIDENCE
// ─────────────────────────────────────────────

model Evidence {
  id          String         @id @default(uuid())
  caseId      String
  type        EvidenceType
  filePath    String
  fileName    String
  fileSize    Int            @default(0)
  mimeType    String?
  hash        String         @unique
  metadata    Json?
  aiResult    Json?
  aiStatus    AIStatus       @default(PENDING)
  deletedAt   DateTime?
  createdAt   DateTime       @default(now())

  case  Case    @relation(fields: [caseId], references: [id], onDelete: Cascade)
  chain Chain[]

  @@index([caseId])
  @@index([type])
  @@index([hash])
  @@index([aiStatus])
}

enum EvidenceType {
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
  PLATE
}

enum AIStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// ─────────────────────────────────────────────
// FUSION
// ─────────────────────────────────────────────

model Fusion {
  id           String   @id @default(uuid())
  caseId       String   @unique
  fusionData   Json
  fusionScore  Float    @default(0)
  confidence   Float    @default(0)
  version      Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  case Case @relation(fields: [caseId], references: [id], onDelete: Cascade)
}

// ─────────────────────────────────────────────
// REPORTS
// ─────────────────────────────────────────────

model Report {
  id         String       @id @default(uuid())
  caseId     String
  type       ReportType   @default(SUMMARY)
  pdfUrl     String?
  payload    Json
  generatedBy String?
  createdAt  DateTime     @default(now())

  case Case @relation(fields: [caseId], references: [id], onDelete: Cascade)

  @@index([caseId])
}

enum ReportType {
  SUMMARY
  DETAILED
  FORENSIC
  TIMELINE
  EXPORT
}

// ─────────────────────────────────────────────
// AUDIT & CHAIN OF CUSTODY
// ─────────────────────────────────────────────

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  resource  String?  // e.g., "case", "evidence"
  targetId  String?
  details   Json?
  ipAddress String?
  userAgent String?
  timestamp DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([action])
  @@index([timestamp])
  @@index([targetId])
}

model Chain {
  id         String      @id @default(uuid())
  evidenceId String
  hash       String
  userId     String
  action     ChainAction @default(UPLOAD)
  notes      String?
  timestamp  DateTime    @default(now())

  evidence Evidence @relation(fields: [evidenceId], references: [id], onDelete: Cascade)

  @@index([evidenceId])
  @@index([timestamp])
}

enum ChainAction {
  UPLOAD
  ACCESS
  MODIFY
  TRANSFER
  ANALYZE
  EXPORT
  DELETE
}
